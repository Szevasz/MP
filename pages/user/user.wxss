/* pages/user/user.wxss */
page{
    background-color:#657065 ;
    display: flex;
    flex-direction: column;
}
.avatar-wrapper {
    padding: 0;
    width: 56px !important;
    height: 56px !important;
    border-radius: 8px;
    /* margin-top: 40px; */
    margin-bottom: 80px;
  }
  
.avatar {
    
    width: 56px;
    height: 56px;
  }
.Login{
    display: flex;
    justify-content: center;
    align-items: center;
    background:#5b6456;
    height: 80rpx;
    width: 180rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}
.inputName{
    display: flex;
    justify-content: center;
    align-items: center;
    background:#5b6456;
    height: 80rpx;
    width: 180rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}
.inputName .Name{
    align-items: center;
    justify-items: center;
    text-align: center;
}
.container {
    display: flex;
  }
  
.nav-item {
    width: 70%;
    height: 120rpx;
    background-color: #5b6456;
    margin: 10rpx;
    opacity: 1;
    border-radius: 10px;
    box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(4px);
    display: flex;
    flex-direction: row;
    align-items: center;
}
.nav-item .nav-img {
    width: 56rpx;
    height: 56rpx;
    margin-right: 80rpx;
    margin-left: 40rpx;
    
}
.nav-item .nav-text {
    font-weight: bolder;
    margin-left: 30rpx;
    /* justify-self: center; */

}

.version {
    
    align-self: flex-end;
    color: rgba(138, 137, 124, 1) ;
}

